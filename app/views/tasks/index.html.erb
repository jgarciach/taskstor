<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:urgent) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:reward) %></th>
      <th>Posted by</th>
      <th>Runner</th>
      <th>Status</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @urgent_tasks.each do |task| %>
      <tr>
        <td><i class="icon-fire"></i></td>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= truncate(task.description, length: 50, separator: ' ') %></td>
        <td><%= number_to_currency task.reward %></td>
        <td><%= task.owner.name %></td> 
        <td><%= task.runner.name %></td> 
        <td><%= task.status %></td> 
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <%= link_to "Accept Task", task_accept_path(task), class: "btn btn-mini btn-primary", method: :put %>
          <%= link_to "Complete Task", task_complete_path(task), class: "btn btn-mini btn-success", method: :put %>
        </td>
      </tr>
    <% end %>
    <% @not_urgent_tasks.each do |task| %>
      <tr>
        <td></td>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= truncate(task.description, length: 50, separator: ' ') %></td>
        <td><%= number_to_currency task.reward %></td>
        <td><%= task.owner.name %></td>
        <td><%= task.runner.name %></td> 
        <td><%= task.status %></td> 
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <%= link_to "Accept Task", task_accept_path(task), class: "btn btn-mini btn-primary", method: :put %>
          <%= link_to "Complete Task", task_complete_path(task), class: "btn btn-mini btn-success", method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_path,
            :class => 'btn btn-primary' %>
